@inject NavigationManager Navigation

@if (contentLoaded)
{
    @ChildContent
}
else
{
    <video id="logoAnimation" autoplay muted controls>
        <source src="images/logoLoad.mp4" type="video/mp4">
        <source src="images/logoLoad.webm" type="video/webm">
        Your browser does not support the video tag.
    </video>
}

@code {

    bool contentLoaded;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Navigation.Uri == Navigation.BaseUri)
        {
            await Task.Delay(4500);
            contentLoaded = true;
        }
        else
        {
            contentLoaded = true;
        }

    }
}